<h2>Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label "What is your Mom/Dad 's email?" :class =>"center-align" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "Now enter your password here!" :class =>"center-align" %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me :class =>"center-align" %>
      <%= f.label :remember_me :class =>"center-align" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" :class =>"center-align" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
